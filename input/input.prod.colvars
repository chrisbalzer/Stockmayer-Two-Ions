indexFile groups.ndx
colvarsTrajFrequency 500

colvar {
  name dist
  distance {
    group1 { indexGroup cation }
    group2 { indexGroup anion  }
  }
  lowerBoundary 0.75
  upperBoundary 2.0
  width 0.01
}

abf {
   name abf_dist
   colvars dist
   fullSamples 1000
   outputFreq 1000
   outputEnergy on
   historyFreq 1000000
   inputPrefix equil
}

harmonicWalls {
  name wall_dist
  colvars dist
  lowerWalls 0.7
  upperWalls 2.05
  lowerWallConstant 1.0
  upperWallConstant 1.0
}
